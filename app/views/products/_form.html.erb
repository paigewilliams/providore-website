<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :cost %>
  <%= f.number_field :cost %><br>
  <%= f.label :country_of_origin %>
  <%= f.select(:country_of_origin, options_for_select([
  ['United States', "US"],
  ['United Kingdom', "GB"],
  ['Austria', "AT"],
  ['Belgium', "BE"],
  ['France', "FR"],
  ['Germany', "DE"],
  ['Greece', "GR"],
  ['Italy', "IT"],
  ['Netherlands', "NL"],
  ['Portugal', "PT"],
  ['Spain', "ES"],
  ['Denmark', "DK"],
  ['Finland', "FI"],
  ['Ireland', "IS"],
  ['Norway', "NO"],
  ['Sweeden', "SE"],
  ['Switzerland', "CH"]
  ])) %><br>
  <button type="submit" class="button"><%= f.submit "Add Product" %></button>
<% end %>
