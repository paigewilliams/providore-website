<h1><%= @product.name %></h1>

<h3>$<%= @product.cost %>/ per pound</h3>

<h4>Country of Origin: <%= @product.country_of_origin %></h4>

<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>

  <ul>
    <% @product.reviews.each do |review| %>
      <li>
        Author: <%= review.author %> |
        Review: <%= review.content_body %>|
        Rating: <%= review.rating %> |
        <%= link_to "Edit", edit_product_review_path(@product, review) %> |
        <%= link_to "Delete", product_review_path(@product, review),
                                 :data => {:confirm => "Are you sure you would like to delete this Review?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no reviews for this product.</p>
<% end %>

<h4>Find Products from a country:</h4>

<p><%= link_to "Add a review", new_product_review_path(@product) %></p>

<p><%= link_to "Edit", edit_product_path(@product) %></p>
<p><%= link_to "Delete", product_path(@product),
                         :data => {:confirm => "Are you sure you would like to delete this product?",
                                   :method => "delete"} %></p>


<p><%= link_to "Return to products", products_path %></p>
